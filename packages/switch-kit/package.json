{
	"name": "switch-kit",
	"version": "0.1.0",
	"module": "index.ts",
	"repository": {
		"type": "git",
		"directory": "packages/switch-kit",
		"url": "https://github.com/hamlim/switch-kit"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"type": "module",
	"dependencies": {
		"@switch-kit/storage-interface": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.3",
		"@swc/cli": "0.3.10",
		"@swc/core": "1.4.2",
		"hohoro": "0.1.2",
		"@types/bun": "1.1.2",
		"typescript": "5.4.5"
	},
	"scripts": {
		"build": "hohoro",
		"type-check": "tsc -p ./tsconfig.json",
		"lint": "biome lint ./src/",
		"test": "bun test",
		"prepub": "bun run build && bun run type-check && bun run lint && bun run test",
		"pub": "npm publish --access public"
	}
}
